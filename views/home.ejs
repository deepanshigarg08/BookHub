<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-SHOPPER</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />
    <style>
      /* Chatbot Styles */
      .chatbot-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
      }
      .chatbot-button {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
      }
      .chatbot-window {
        display: none;
        background-color: #e8e4e4;
        border: 1px solid #ddd;
        border-radius: 10px;
        width: 300px;
        height: 400px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: absolute;
        bottom: 80px;
        right: 0;
        overflow: hidden;
      }
      .chatbot-header {
        background-color: #6c757d;
        color: white;
        padding: 10px;
        font-weight: bold;
        text-align: center;
      }
      .chatbot-messages {
        padding: 10px;
        overflow-y: auto;
        height: 300px;
        color:black;
        
      }
     
      .chatbot-input {
        display: flex;
        border-top: 1px solid #ddd;
      }
      
      .chatbot-input input {
        flex: 1;
        border: none;
        padding: 10px;
        outline: none;
      }
      .chatbot-input button {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        
      }
    </style>
  </head>

  <body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-left mb-0">BookHub</h3>
          <nav class="nav nav-masthead justify-content-center float-md-right">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <a class="nav-link" href="/products">Books</a>
            <% if(!currentUser) { %>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
            <% } else { %>
            <a class="nav-link" href="/logout">Logout</a>
            <% } %>
          </nav>
        </div>
      </header>
      <main class="px-3">
        <h1>BookHub</h1>
        <p class="lead">
          Welcome to BookHub <br />
          Jump right in and explore our many Books. <br />
          Feel free to add some of your own and comment on others!
        </p>
        <a
          href="/products"
          class="btn btn-sm btn-secondary font-weight-bold border-white bg-white"
          >View Books</a
        >
      </main>

      <!-- Chatbot Integration -->
      <div class="chatbot-container">
        <button class="chatbot-button" onclick="toggleChatbot()">ðŸ’¬</button>
        <div class="chatbot-window">
          <div class="chatbot-header">Chat with Us</div>
          <div class="chatbot-messages" id="chatbotMessages"></div>
          <div class="chatbot-input">
            <input
              type="text"
              id="chatbotInput"
              placeholder="Type a message..."
            />
            <button onclick="sendMessage()">Send</button>
          </div>
        </div>
      </div>

      <footer class="mt-auto text-white-50">
        <p>All Right Reserved &copy; 2024 <b>Nitin Yadav</b></p>
      </footer>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
      integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
      crossorigin="anonymous"
    ></script>
    <script>
      function toggleChatbot() {
        const chatbotWindow = document.querySelector('.chatbot-window');
        chatbotWindow.style.display =
          chatbotWindow.style.display === 'none' ? 'block' : 'none';
      }

      function sendMessage() {
  const input = document.getElementById('chatbotInput');
  const messages = document.getElementById('chatbotMessages');
  const userInput = input.value.trim();

  if (userInput !== '') {
    
    const userMessage = `<div style="color: black; ">User: ${userInput}</div>`;
    messages.innerHTML += userMessage;

    
    let botResponse = '';
    if (userInput.toLowerCase() === 'hello'|| userInput.toLowerCase() === 'hy'|| userInput.toLowerCase() === 'hi') {
      botResponse = 'Hello, how can I help you?';
    } else if (userInput.toLowerCase().includes('what type of product you sell')) {
      botResponse = `We sell all types of books, including:
      <ul>
        <li>Mystery</li>
        <li>Thriller</li>
        <li>Fantasy</li>
        <li>Science Fiction</li>
        <li>Romance</li>
        <li>Historical Fiction</li>
        <li>Horror</li>
        <li>Adventure</li>
        <li>And many more!</li>
      </ul>`;
    } else if (userInput.toLowerCase().includes('price range')) {
      botResponse = 'Our prices range from â‚¹0 to â‚¹5000.';
    } else if (/^\d{10}$/.test(userInput)) {
      botResponse = 'Thanks for sharing your contact number! We will connect with you soon.';
    } else {
      botResponse = "Sorry, I can't answer that right now. Please drop your contact information.";
    }

    // Bot response with inline CSS
    setTimeout(() => {
      messages.innerHTML += `<div style="color: brown;">Bot: ${botResponse}</div>`;
      messages.scrollTop = messages.scrollHeight;
    }, 1000);

    input.value = '';
  }
}

    </script>
  </body>
</html>
