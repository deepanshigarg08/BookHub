<% layout('layouts/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Book Name : </label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Your BooK Full name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image URL</label>
                <input class="form-control" type="text" name="img" id="img" placeholder="Book Image URL If any" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Rs</span>
                    <input type="text" name="price" class="form-control" placeholder="Price" aria-label="Username" aria-describedby="basic-addon1" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>  
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" placeholder="Description about your book  like what type of book is this , and author of the book ........."  id="desc" rows="5" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Add</button>
        </form>
    </div>
</div>





