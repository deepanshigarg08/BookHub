<% layout('layouts/boilerplate') -%>

<html lang="en">
<head>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    html, body {
      height: 100%;
      margin: 0;
    }
    .dark-theme {
      background-color: #343a40; /* Dark background color */
      color: #fff; /* Light text color */
    }
    .dark-theme form {
      background-color: #454d55; /* Dark form background color */
      padding: 20px;
      border-radius: 10px;
    }
    .dark-theme .card {
      background-color: #343a40; /* Dark card background color */
      color: #fff; /* Light card text color */
    }
    .dark-theme .btn-success {
      background-color: #28a745; /* Green button for success */
      border-color: #28a745;
    }
    .dark-theme .btn-success:hover {
      background-color: #218838; /* Darker green on hover */
      border-color: #1e7e34;
    }
    .dark-theme .form-check-input {
      background-color: #6c757d; /* Gray background for radio buttons */
      border-color: #6c757d; /* Gray border for radio buttons */
    }
    .dark-theme .form-check-input:checked {
      background-color: #28a745; /* Green background for checked radio buttons */
      border-color: #28a745; /* Green border for checked radio buttons */
    }
  </style>
</head>
<body class="dark-theme"> <!-- Apply dark theme class to body -->

<div class="container-fluid h-100"> <!-- Full-height container fluid -->
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card p-3 shadow-sm m-2">
        <h1 class="display-6">Sign Up</h1>
        <form action="/register" method="post">
          <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="email" name="email" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <p class="mb-2">Want to register as?</p>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="role" value="seller" id="seller">
              <label class="form-check-label" for="seller">Seller</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="role" value="buyer" id="buyer">
              <label class="form-check-label" for="buyer">Buyer</label>
            </div>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-success btn-block">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>

</body>
</html>
